<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.ScorePage">

    <ContentPage.Content>
        <StackLayout Style="{StaticResource VerticalStack}">
            <Label Text="GAME OVER" HorizontalOptions="CenterAndExpand" FontSize="24" FontAttributes="Bold"></Label>
            <Label LineBreakMode="WordWrap" HorizontalOptions="CenterAndExpand" Text="You've lost control. Make your peace as now you will wander for the rest of time within your own mind watching someone else in the drivers seat."></Label>
            <Image Source="skull.png" WidthRequest="250" HeightRequest="250" HorizontalOptions="CenterAndExpand"/>
            <Label HorizontalOptions="CenterAndExpand" Text="Your Score:"></Label>
            <Label HorizontalOptions="CenterAndExpand" Text="{Binding Data.ScoreTotal}"></Label>

            <Button Clicked="CloseButton_Clicked" Text="Close"></Button>

        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>